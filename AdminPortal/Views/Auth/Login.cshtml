@model AdminPortal.Models.AuthViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    <div class="row">
        <div class="col-xs-offset-3 col-xs-6">

            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm())
            {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>
                                Username
                            </label>
                         @Html.TextBoxFor(m => m.Username, new { @class = "input-sm form-control" })
                        </div>
                        <div class="form-group">
                            <label>
                                Password
                            </label>
                            @Html.PasswordFor(m => m.Password, new { @class="input-sm form-control"})
                        </div>
                        <div class="checkbox">
                            <label>@Html.CheckBoxFor(m => m.RememberUser) Remember me</label>
                        </div>

                        <input class="btn btn-primary" type="submit" value="Login"/>
                    }
                </div>
            </div>

        </div>
    </div>
</div>