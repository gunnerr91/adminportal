<script type="text/ng-template" id="quick-edit-entry-modal.html">

    <div class="modal-header">
        <h4 class="modal-title">
            Edit Entry
        </h4>
    </div>

    <div class="modal-body">
        <div class="container-fluid">
            <div class="col-xs-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Employee Name
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="employeeName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Year Total
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="yearTotal">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <input type="submit" class="btn btn-default" ng-click="save()" value="Save" />
        <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    </div>

</script>

