<script type="text/ng-template" id="quick-add-new-entry-modal.html">

    <div class="modal-header">
        <h4 class="modal-title">
            Add new Employee
        </h4>
    </div>

    <div class="modal-body">
        <div class="container-fluid">
            <div class="col-xs-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Choose Employee
                        </label>
                        <div class="col-sm-8">
                            <select class="input-sm form-control" data-val="true" data-val-required="The Department field is required." ng-model="employee">
                                <option ng-repeat="employee in employees" value="{{employee.Value}}">{{employee.Text}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Business Year
                        </label>
                        <div class="col-sm-8">
                            <select class="form-control" ng-model="selectedYear" ng-change="load(selectedYear)">
                                <option ng-repeat="year in years">{{year}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                           Year Start Date
                        </label>
                        <div class="col-sm-8">
                            <input datetimepicker datetimepicker-options="{{ datetime_options }}" mo-date-input="DD/MM/YYYY" class="form-control input-sm" type="text" ng-model="startDate" placeholder="Start Date">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Year End Date
                        </label>
                        <div class="col-sm-8">
                            <input datetimepicker datetimepicker-options="{{ datetime_options }}" mo-date-input="DD/MM/YYYY" class="form-control input-sm" type="text" ng-model="endDate" placeholder="End Date">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            <input id="AddOtherSalary" name="AddOtherSalary" type="checkbox" value="true" ng-model="addOtherSalary">
                            <label>
                                Include another salary range
                            </label>
                        </div>
                    </div>

                    <div ng-show="addOtherSalary">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                Other Salary Start Date
                            </label>
                            <div class="col-sm-8">
                                <input datetimepicker datetimepicker-options="{{ datetime_options }}" mo-date-input="DD/MM/YYYY" class="form-control input-sm" type="text" ng-model="otherSalaryStart" placeholder="Start Date">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                Other Salary End Date
                            </label>
                            <div class="col-sm-8">
                                <input datetimepicker datetimepicker-options="{{ datetime_options }}" mo-date-input="DD/MM/YYYY" class="form-control input-sm" type="text" ng-model="otherSalaryEnd" placeholder="End Date">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                Other Salary
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control input-sm" type="text" ng-model="otherSalary" placeholder="Other Salary">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                           Loyalty Bonus Amount
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="loyaltyBonus">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Amount of sales
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="amountOfSales">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Amount of permited Holiday not taken
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="notTakenHoliday">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Mission Bonus
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="missionBonus">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Amount of references
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="references">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">
                            Other Bonus
                        </label>
                        <div class="col-sm-8">
                            <input class="form-control input-sm" type="text" ng-model="otherBonus">
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <input type="submit" class="btn btn-default" ng-click="save()" value="Save" />
        <button type="button" class="btn btn-default" ng-click="cancel()">Close</button>
    </div>

</script>

